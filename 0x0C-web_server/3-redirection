#!/usr/bin/env bash
# Script to configure nginx redirection

# Update package list
apt-get update

# Install nginx with -y flag to avoid prompts
apt-get install -y nginx

# Create the default nginx site configuration with redirection
cat > /etc/nginx/sites-available/default << 'EOF'
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    
    root /var/www/html;
    index index.html index.htm;
    
    server_name _;
    
    location / {
        try_files $uri $uri/ =404;
    }
    
    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
}
EOF

# Enable the default site
ln -sf /etc/nginx/sites-available/default /etc/nginx/sites-enabled/

# Create the index.html file with "Hello World!"
echo "Hello World!" > /var/www/html/index.html

# Start nginx (not using systemctl as per requirements)
service nginx start

# Test nginx configuration
nginx -t 